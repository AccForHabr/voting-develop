<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/header_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/logo_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/header_divider_view"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/pink"
        app:layout_constraintLeft_toLeftOf="@+id/header_image_view"
        app:layout_constraintTop_toBottomOf="@+id/header_image_view" />

    <TextView
        android:id="@+id/t_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/first_title"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/header_image_view"
        app:layout_constraintRight_toRightOf="@+id/header_image_view"
        app:layout_constraintTop_toBottomOf="@+id/header_divider_view" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="@string/reports_list"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/header_image_view"
        app:layout_constraintRight_toRightOf="@+id/header_image_view"
        app:layout_constraintTop_toBottomOf="@+id/t_text_view" />

</android.support.constraint.ConstraintLayout>